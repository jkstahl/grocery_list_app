<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="New list name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prompt"
        android:textSize="24sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@+id/prompt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/new_string"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="New Name" />


    <Button
        android:text="OK"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/ok_button"
        android:layout_alignBaseline="@+id/cancel_button"
        android:layout_alignBottom="@+id/cancel_button"
        android:layout_toLeftOf="@+id/cancel_button"
        android:layout_toStartOf="@+id/cancel_button" />
    <Button
        android:text="Cancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_button"
        android:layout_below="@+id/new_string"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>